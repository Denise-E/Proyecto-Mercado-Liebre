<%- include("./includes/head")  %> 

<body>
    <%- include("./includes/header")  %> 

    <main>
        <form action="/users/" method="POST" enctype="multipart/form-data">
            <section><h2>Crear cuenta</h2></section>
            <section class="form">
                <h2>Datos personales</h2>
                <label>Nombre:</label>
                <input type="text" name="name" id="" minlength="2" required>
                <span class="feedback"></span>
                <label for="">Apellido:</label>

                <input type="text" name="lastName" id="" required>
                <label for="">Correo electrónico:</label>
                <input type="email" name="email" id="">
                <label for="">Fecha de nacimiento:</label>
                <input type="date" name="birthdayDate" id="">
                <label for="">Domicilio:</label>
                <input type="text" name="adress" id="">
            </section>
            <section class="form">
                <h2>Perfil del Usuario</h2>
                <label for="">Nombre de usuario:</label>
                <input type="text" name="userId" required>
                <label for="">Contraseña:</label>
                <input type="password" name="password" minlength="8" placeholder="*************" required>
                <label for="">Confirmar contrsaseña:</label>
                <input type="password" name="passwordConfirmation" minlength="8" placeholder="*************" required>
                <label for="">Tipo de usuario:</label>
                <select name="rol" id="" required>
                    <option value="comprador">Comprador</option>
                    <option value="vendedor">Vendedor</option>
                </select>
                <label for="">Intereses:
                    <section class="interests">
                        <label for="electronica"><input type="checkbox" name="interests" value="electronica" id="electronica"> Electronica</label>
                        <label for="moda"><input type="checkbox" name="interests" value="moda" id="moda"> Moda</label>
                        <label for="hogar"><input type="checkbox" name="interests" value="hogar" id="hogar"> Hogar</label>
                        <label for="juguetería"><input type="checkbox" name="interests" value="juguetería" id="juguetería"> Juguetería</label>
                        <label for="vidaSana"><input type="checkbox" name="interests" value="vidaSana" id="vidaSana"> Vida sana</label>   
                    </section>
                </label>  
                
            <section>  
                <label for="">Foto de perfil:</label>
                <input type="file" name="image" class="profilePicture">
                <button type="submit">Registrarme</button> 
                <button type="reset">Borrar</button>
            </section>
        </form>
        <% if (locals.errors && errors.email) { %>
            <p><%= errors.email.msg %> </p>
           <% } %>
           
           <% if (locals.errors && errors.password) { %>
               <p><%= errors.password.msg %> </p>
              <% } %>
              <% if (locals.errors && errors.userId) { %>
                <p><%= errors.userId.msg %> </p>
               <% } %>
    </main>

    <%- include("./includes/footer")  %>    
</body>
</html>