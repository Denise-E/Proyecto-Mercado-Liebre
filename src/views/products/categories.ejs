<%- include("../includes/head")  %> 

<body>
    <%- include("../includes/header")  %> 
    
<main>
        <h1><%= category.category %> </h1>     
         <section class="article">
                <% products.filter(element => element.category == category.category).forEach(element => { %>
                             
                                <article>
                                <a href="/products/<%= element.id %>">
                                    <img src= "/images/<%=element.image %>">
                                <section>
                                    <section>
                                        <h3><%= element.name %> </h3>
                                     <p>$ <%= element.price %> </p>
                                     <p><%= element.discount %>% OFF</p>   
                                    </section>
                                <p> <%= element.name %> </p>  
                                </section>
                                </a>
                                </article>
                            
                <% }) %>
            </section>
</main>

<%- include("../includes/footer") %> %> 
</body>